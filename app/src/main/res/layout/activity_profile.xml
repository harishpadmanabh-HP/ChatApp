<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302E2E"
    android:orientation="vertical"
    tools:context=".ProfileActivity">


    <ImageView
        android:id="@+id/displayprofileimage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/profiledisplayname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Display Name"
        android:layout_marginTop="30dp"
        android:textColor="#fff"
        android:textSize="25dp"

        />
    <TextView
        android:id="@+id/profiledisplaystatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Status"
        android:layout_marginTop="10dp"
        android:textColor="#F0D9D9"
        android:textSize="20dp"

        />

    <TextView
        android:id="@+id/profiledisplaytotalfrnds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Status"
android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp"




        />

    <Button
        android:id="@+id/sendreq"
        android:layout_width="199dp"
        android:layout_height="40dp"

        android:background="@color/colorAccent"
        android:text="Send Request"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:elevation="100dp"
        />
    <Button
        android:id="@+id/decliereq"
        android:layout_width="199dp"
        android:layout_height="40dp"

        android:background="@color/colorAccent"
        android:text="Decline Request"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:elevation="100dp"
        />
</LinearLayout>